@model IEnumerable<ApplicationCore.Entities.Post>

@{
    ViewData["Title"] = "Index";
}

@*<h2>Index</h2>




    <p>
        <a asp-action="Create">Create New Post</a>
    </p>*@


<main class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_side")
        </div>

        <div class="col-md-6">
            <div id="carouselGallery" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselGallery" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselGallery" data-slide-to="1"></li>
                    <li data-target="#carouselGallery" data-slide-to="2"></li>
                    <li data-target="#carouselGallery" data-slide-to="3"></li>
                    <li data-target="#carouselGallery" data-slide-to="4"></li>
                    <li data-target="#carouselGallery" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/developer001.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-light bg-dark">Browser Compatibility</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/responsive001.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-light bg-dark">Thinking Mobile First</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/css-colors002.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-light bg-dark">CSS Colors</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/freelance002.png" alt="Fourth slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-light bg-dark">Thinking Freelancing ?</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/developer003.jpg" alt="Fith slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-light bg-dark">
                                <img src="/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt=""> Bootstrap
                            </h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/css-colors001.jpg" alt="Sixth slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-light bg-dark">CSS colors picker</h3>
                        </div>
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselGallery" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselGallery" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div id="posts">
                <h4>Recent Posts</h4>



                @foreach (var post in Model)
                {
                    <h2><a asp-controller="post" asp-action="details" asp-route-id=@post.id>@post.Title</a></h2>
                    @*<div>
                        @Html.Raw(post.content)
                        </div>*@

                    @Html.ActionLink("Edit", "Edit", new { id = post.id }) 
                    @Html.ActionLink("Details", "Details", new { id = post.id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = post.id });
                }



            </div>
        </div>
        <div class="col-md-3">
            @Html.Partial("_aside")
        </div>
    </div>
</main>




